<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@picture.picture_url, width: '100%') if @picture.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @picture.name %></p>
    <p><b>Description: </b><%= @picture.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@picture) %> |
      <%= link_to 'Destroy', @picture, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to 'Back', ideas_path %>
    </p>
  </div>
</div>